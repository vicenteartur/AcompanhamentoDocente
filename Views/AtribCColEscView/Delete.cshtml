@model AcompanhamentoDocente.ViewModel.AtribCCColEscViewModel

@{
    ViewData["Title"] = "Atribuição de Componente para o Professor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Remover Atribuição</h1>

<h3>Tem certeza que deseja remover esta Atribuição? Todas as Avaliações serão afetadas.</h3>

<div>


    <dl>

        <dd class="col-sm-10">
            <label class="negrito">Nome: </label> @Html.DisplayFor(model => model.Nome)
        </dd>

        <dd class="col-sm-10">
            <label class="negrito">E-mail: </label>@Html.DisplayFor(model => model.Email)
        </dd>

        <dd class="col-sm-10">
            <label class="negrito">Cargo: </label>    @Html.DisplayFor(model => model.Cargo)
        </dd>

        <dd class="col-sm-10">
            <label class="negrito">Ativo:</label>
            @if (Model.Ativo != 1)
            {<b>Não</b>}
            else
            { <b>Sim</b>}

        </dd>
    </dl>
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.CodigoAdministrador" id="id" name="id" />
        <input type="hidden" asp-for="@Model.CodigoEscola" id="esc" name="esc" />
        <input type="hidden" asp-for="@Model.Codigo" id="atribu" name="atribu" />
        
        <button asp-action="DeleteConfirmed" value="Delete" id="action" class="btn waves-effect waves-light" type="submit" name="action">
            <i class="material-icons right">person_remove</i>
            Remover
        </button>|
        <p>
            <a href='@Url.Action("Index", "AtribCColEscView", new { id = ViewBag.admin.Codigo, esc = ViewBag.esc.Codigo})' class="waves-effect waves-light btn">
                <span class="material-icons">

                    view_list

                </span>
                Lista Colaboradores
            </a>
        </p>
    </form>
</div>
