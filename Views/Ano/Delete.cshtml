@model AcompanhamentoDocente.Models.TbAno

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center"><h1>Remover da Turma</h1></div>

<h3>Tem certeza que deseja remover esta turma?</h3>
<div>
    
    <dl class="row">

        <dd class="col-sm-10">
            <label class="negrito">Ano: </label>@Html.DisplayFor(model => model.Ano)
        </dd>

        <dd class="col-sm-10">
            <label class="negrito">Turma: </label>@Html.DisplayFor(model => model.Turma)
        </dd>

        <dd class="col-sm-10">
            <label class="negrito">Modalidade: </label>@Html.DisplayFor(model => model.CodigoModalidadeNavigation.Modalidade)
        </dd>

        <dd class="col-sm-10">
            <label class="negrito">Período: </label>@Html.DisplayFor(model => model.Periodo)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Codigo" />
        <div class="center">
            <p id="l_botao">
                <button id="btsalvarpequeno" class="btn-small waves-effect waves-light" type="submit" name="action">
                    <i class="material-icons left">delete</i>
                    Remover
                </button>

                <a href='@Url.Action("Index", "Ano", new { id = ViewBag.admin.Codigo , criterio = Model.Codigo})' class="waves-effect waves-light btn-small" id="btlistapequeno">
                    <span class="material-icons">

                        view_list

                    </span>
                    Lista
                </a>
            </p>
        </div>
    </form>
</div>
