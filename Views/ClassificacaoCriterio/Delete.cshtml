@model AcompanhamentoDocente.Models.TbClassificacaoCriterio

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="center">
    <h1>Remover Classificação</h1>

    <h3>Tem certeza que deseja apagar esta Classificação?</h3>
</div>

<dl class="row">

    <dd class="col-sm-10">
        <label class="negrito">Classificação: </label> @Html.DisplayFor(model => model.Classificacao)
    </dd>
</dl>


<form asp-action="Delete">
    <input type="hidden" asp-for="Codigo" />
    <div class="center">
        <p id="l_botao">
            <button id="btsalvarpequeno" class="btn-small waves-effect waves-light" type="submit" name="action">
                <i class="material-icons left">delete</i>
                Remover
            </button>

            <a href='@Url.Action("Index", "ClassificacaoCriterio", new { id = ViewBag.admin.Codigo , criterio = Model.Codigo})' class="waves-effect waves-light btn-small" id="btlistapequeno">
                <span class="material-icons">

                    view_list

                </span>
                Lista
            </a>
        </p>
    </div>
</form>
</div>
