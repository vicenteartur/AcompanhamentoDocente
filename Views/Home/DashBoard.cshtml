@model IEnumerable<AcompanhamentoDocente.ViewModel.EscolaViewModel>

@{
}



@if (ViewBag.colaborador.CodigoCargoNavigation.NiveldeAcesso >= 4)

{

    <li><a href='@Url.Action("Index", "Estado", new { id = ViewBag.colaborador.Codigo })' class="waves-effect waves-light btn">Estados</a></li>
    <li><a href='@Url.Action("Index", "Cidade", new { id = ViewBag.colaborador.Codigo })' class="waves-effect waves-light btn">Cidades</a></li>
    <li><a href='@Url.Action("Index", "EscolaView", new { id = ViewBag.colaborador.Codigo })' class="waves-effect waves-light btn">Escolas</a></li>
    <li><a href='@Url.Action("Index", "Cargo", new { id = ViewBag.colaborador })' class="waves-effect waves-light btn">Cargos</a></li>
    <li><a href='@Url.Action("Index", "Modalidades", new { id = ViewBag.colaborador.Codigo })' class="waves-effect waves-light btn">Modalidades</a></li>
    <li><a href='@Url.Action("Index", "Ano", new { id = ViewBag.colaborador.Codigo })' class="waves-effect waves-light btn">Anos</a></li>
    <li><a href='@Url.Action("Index", "CCurricular", new { id = ViewBag.colaborador.Codigo })' class="waves-effect waves-light btn">Componente Curricular</a></li>

}

@if (ViewBag.colaborador.CodigoCargoNavigation.NiveldeAcesso > 0)

{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Escola)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.INEP)
            </th>

            <th>
                Cidade
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Escola)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.INEP)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.nomeCidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sigla)
                </td>
                <td>
                    <a href='@Url.Action("GerenciarEscola", "Home", new { id = ViewBag.colaborador.Codigo, esc = item.Codigo })' class="waves-effect waves-light btn">Acessar</a>
                </td>
            </tr>
        }

    </table>
}
