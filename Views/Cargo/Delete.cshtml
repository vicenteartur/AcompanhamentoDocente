@model AcompanhamentoDocente.Models.TbCargo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center">
    <h1>Apagar Cargo</h1>

    <h3>Tem certeza que deseja apagar o Cargo?</h3>
</div>

<div>

        <dl class="row">
    
            <dd class="col-sm-10">
                <label class="negrito">Cargo: </label> @Html.DisplayFor(model => model.Cargo)
            </dd>
    
            <dd class="col-sm-10">
                <label class="negrito">Nivel de Acesso: </label> @Html.DisplayFor(model => model.NiveldeAcesso)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Codigo" />
            <div class="center">
                <p id="l_botao">
                    <button id="btsalvarpequeno" class="btn-small waves-effect waves-light" type="submit" name="action">
                        <i class="material-icons left">delete</i>
                        Remover
                    </button>

                    <a href='@Url.Action("Index", "Cargo", new { id = ViewBag.admin.Codigo , codigo = Model.Codigo})' class="waves-effect waves-light btn-small" id="btlistapequeno">
                        <span class="material-icons">

                            view_list

                        </span>
                        Lista
                    </a>
                </p>
            </div>
        </form>
</div>
