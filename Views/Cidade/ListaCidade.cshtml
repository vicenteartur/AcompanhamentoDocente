@model IEnumerable<AcompanhamentoDocente.Models.TbCidade>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListaCidade</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CodigoEstadoNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoEstadoNavigation.Estado)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Codigo">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Codigo">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Codigo">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
<script type="text/javascript" src="~/lib/materialize/js/materialize.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/materialize/js/materialize.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<script type="text/javascript" src="/js/site.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

