@model AcompanhamentoDocente.Models.TbCidade

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    
    <dl class="row">

        <dd class="col-sm-10">
            <label class="negrito">Cidade: </label> @Html.DisplayFor(model => model.Cidade)
        </dd>

        <dd class="col-sm-10">
            <label class="negrito">Estado: </label>@Html.DisplayFor(model => model.CodigoEstadoNavigation.Estado)
        </dd>
    </dl>
</div>
<div>
    <div class="center">
        <p id="l_botao">
            <a href='@Url.Action("Edit", "Cidade", new { id = ViewBag.Admin.Codigo, criterio = Model.Codigo })' class="waves-effect waves-light btn-small" id="btmodificarpequeno">
                <span class="material-icons">
                    mode_edit
                </span>
                Modificar
            </a>

            <a href='@Url.Action("Index", "Cidade", new { id = ViewBag.Admin.Codigo, criterio = Model.Codigo })' class="waves-effect waves-light btn-small" id="btlistapequeno1">
                <span class="material-icons">

                    view_list

                </span>
                Lista
            </a>
        </p>
    </div>
    
</div>
