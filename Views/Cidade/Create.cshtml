@model AcompanhamentoDocente.Models.TbCidade

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>TbCidade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoEstado" class="control-label"></label>
                @Html.DropDownListFor(model => model.CodigoEstado, (IEnumerable<SelectListItem>)ViewBag.CodigoEstado, "--Selecione", new { @id = "CodigoEstado", @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input type="hidden" name="id" value="@ViewBag.admin.Codigo" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.admin.Codigo">Lista de Cidades</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
