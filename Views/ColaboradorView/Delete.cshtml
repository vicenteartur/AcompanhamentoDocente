@model AcompanhamentoDocente.ViewModel.ColaboradorViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Remover Colaborador</h1>

<h3>Tem certeza que deseja remover o Colaborador? Todas as Atribuições serão afetadas.</h3>

<div class="fixed-action-btn">
    <a class="btn-floating btn-large">
        <i class="large material-icons">more_horiz</i>
    </a>
    <ul>
        <li>
            <a href='@Url.Action("Edit", "ColaboradorView", new { id = Model.CodigoAdministrador, esc = Model.CodigoEscola, col = Model.Codigo })' class="btn-floating btn-large waves-effect waves-light">
                <span class="large material-icons">
                    mode_edit
                </span>
                Modificar
            </a>
        </li>

        <li>
            <a href='@Url.Action("Create", "ColaboradorView", new { id = ViewBag.admin.Codigo, esc = ViewBag.escola.Codigo })' id="adcionar" class="btn-floating btn-large waves-effect waves-light">
                <i class="large material-icons">
                    add
                </i>
            </a>
        </li>

        <li>
            <a href='@Url.Action("Index", "ColaboradorView", new { id = ViewBag.admin.Codigo, esc = ViewBag.escola.Codigo, email = "null" })' class="btn-floating btn-large waves-effect waves-light">
                <i class="material-icons">
                    person
                </i>
            </a>
        </li>
        <li>
            <a href='@Url.Action("Index", "AtribCColEscView", new { id = ViewBag.admin.Codigo, esc = ViewBag.escola.Codigo })' class="btn-floating btn-large waves-effect waves-light">
                <span class="material-icons">
                    supervised_user_circle
                </span>
            </a>
        </li>
    </ul>
</div>

<div>



    <div>

        <dl>

            <dd class="col-sm-10">
                <label class="negrito">Nome: </label> @Html.DisplayFor(model => model.Nome)
            </dd>

            <dd class="col-sm-10">
                <label class="negrito">E-mail: </label>@Html.DisplayFor(model => model.Email)
            </dd>

            <dd class="col-sm-10">
                <label class="negrito">Cargo: </label>    @Html.DisplayFor(model => model.Cargo)
            </dd>

            <dd class="col-sm-10">
                <label class="negrito">Ativo:</label>
                @if (Model.Ativo != 1)
                {<b>Não</b>}
                else
                { <b>Sim</b>}

            </dd>
        </dl>
    </div>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="@Model.Codigo" id="id" />
            <input type="hidden" asp-for="@Model.CodigoEscola" id="esc" />
            <input type="hidden" asp-for="@Model.CodigoAdministrador" id="ad" />

            <div class="form-group">

                <div class="center">
                    <p id="l_botao">
                        <button id="btsalvarpequeno" class="btn-small waves-effect waves-light" type="submit" name="action">
                            <i class="material-icons left">person_remove</i>
                            Remover
                        </button>

                    </p>
                </div>
            </div>

        </form>
    </div>
</div>