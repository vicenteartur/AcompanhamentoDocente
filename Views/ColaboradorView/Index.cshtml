@model IEnumerable<AcompanhamentoDocente.ViewModel.ColaboradorViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    @Html.ActionLink("Create", "Create", new { id = ViewBag.id, esc = ViewBag.esc })
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CodigoAdministrador, esc = item.CodigoEscola, col = item.Codigo }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CodigoAdministrador, esc = item.CodigoEscola, col = item.Codigo }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CodigoAdministrador, esc = item.CodigoEscola, col = item.Codigo })
                </td>
            </tr>
        }

        

    </tbody>
</table>
