@model AcompanhamentoDocente.ViewModel.ColaboradorViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center"><h1>Detalhes do Colaborador</h1></div>



<div>
    
    
    <dl >
        
        <dd class="col-sm-10">
           <label class="negrito">Nome: </label> @Html.DisplayFor(model => model.Nome)
        </dd>
       
        <dd class="col-sm-10">
            <label class="negrito">E-mail: </label>@Html.DisplayFor(model => model.Email)
        </dd>
        
        <dd class="col-sm-10">
        <label class="negrito">Cargo: </label>    @Html.DisplayFor(model => model.Cargo)
        </dd>
        
        <dd class="col-sm-10">
            <label class="negrito">Ativo:</label>
                     @if (Model.Ativo != 1)
                {<b>Não</b>}
                else
                { <b>Sim</b>}
            
        </dd>
    </dl>
</div>
<div>
    
    <div class="center">
        <p id="l_botao">
            <a href='@Url.Action("Edit", "ColaboradorView", new { id = Model.CodigoAdministrador, esc = Model.CodigoEscola, col = Model.Codigo })' class="waves-effect waves-light btn-small" id="btmodificarpequeno">
                <span class="material-icons">
                    mode_edit
                </span>
                Modificar
            </a>
        
            <a href='@Url.Action("Index", "ColaboradorView", new { id = ViewBag.admin.Codigo, esc = ViewBag.esc})' class="waves-effect waves-light btn-small" id="btlistapequeno">
                <span class="material-icons">

                    view_list

                </span>
                Lista Colaboradores
            </a>
        </p>
    </div>
</div>