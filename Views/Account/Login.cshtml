@model AcompanhamentoDocente.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<h3>Login</h3>
<div class="row">
    <div class="col s12 nav-wrapper">
        <div class="containerBodyLogin">
            <div class="col l6 push-l3 white z-depth-3 redondo">
                <div class="center"><img class="responsive-img" src="~/img/logo.png"></div>
                <form method="post" name="login">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Email" class="validate" type="email" placeholder="Insira o E-mail Corporativo" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <label asp-for="Email" id="rotulo"></label>
                    </div>
                    <br />
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <label asp-for="Password">Senha</label>
                    </div>
                    <br />
                    <div class="form-group">

                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" type="checkbox" class="filled-in" checked="checked" />
                            <span></span>Lembrar
                        </label>

                    </div>
                    <button class="btn waves-effect waves-light" type="submit">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
