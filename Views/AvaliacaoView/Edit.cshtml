@model AcompanhamentoDocente.ViewModel.AvaliacaoViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/site.js"></script>
<script src="~/lib/Jquery3/jquery-3.4.1.js"></script>
<script src="~/lib/Jquery3/jquery-3.4.1.min.js"></script>



<h1>Edit</h1>

<h4>AvaliacaoViewModel</h4>
<div id="xamego" class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <input type="hidden" name="id" value="@ViewBag.admin.Codigo" />
            <input type="hidden" name="esc" value="@ViewBag.escola.Codigo" />
            <input type="hidden" asp-for="CodigoColaboradorAvaliador" value="@ViewBag.admin.Codigo" />
            @Html.EditorFor((model => model.Codigo), new { @type = "hidden" })
            @Html.EditorFor((model => model.CodigoACECCA), new { @type = "hidden" })
            @Html.EditorFor((model => model.dataavaliacao), new { @type = "hidden" })



            <hr />
            <dl class="row">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.NomeAvaliador)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeAvaliador)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.NomeColaborador)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeColaborador)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.dataavaliacao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.dataavaliacao)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.ccurric)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ccurric)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.ano)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ano)
                </dd>
            </dl>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CriterioAvaliado)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CriterioAvaliado)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CodigoCriterioAvaliacaoNavigation.Criterio)
                            </td>
                            <td></td>
                            <td>
                                <a href="#" id="btnDetalhes" class="btn btn-default btnDetalhes" data-value="@item.Codigo">Avaliar</a> |
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div id="teste"></div>
                        </div>
                        <div class="modal-footer">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {

        $.ajaxSetup({ cache: false });

        $("#btnDetalhes").click(function () {

            var id = $(this).data("value");

            $("#teste").load("/AvaliacaoView/AtualizaCriAv/" + id, function () {
                $('#myModal').modal().modal('open');
            });
        });
    });
</script>



