@model AcompanhamentoDocente.Models.TbCriterioAvaliado

@{
    Layout = null;
    ViewBag.Title = "AtualizaCriAv";
}




<div class="justify-content-lg-start"><h1>@Model.CodigoCriterioAvaliacaoNavigation.Criterio</h1></div>

<div id="aqui" class="row">
    <div class="col-md-4">
        <form asp-action="AtualizaCriAv" onsubmit="close" target="aqui" id="form_at" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <div class="form-group">
                
                <input asp-for="CodigoCriterioAvaliacao" class="form-control" type="hidden" />
                <span asp-validation-for="CodigoCriterioAvaliacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h>
                    Não Atende
                    <input asp-for="Conceito" type="range" min="0" max="1" class="range-field" />
                    Atende
                </h>
                
                <span asp-validation-for="Conceito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label">Observações</label>
                <textarea rows="10" cols="12" size="fixed" maxlength="500" asp-for="Comentario" class="form-control"></textarea>
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="CodigoAvaliacao" class="form-control" type ="hidden" />
                <span asp-validation-for="CodigoAvaliacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Salvar
                    <i class="material-icons right">save</i>
                </button>
            </div>
        </form>
    </div>
</div>




<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery('#form_at').submit(function () {
            var dados = jQuery(this).serialize();

            jQuery.ajax({
                type: "POST",
                url: "/AvaliacaoView/AtualizaCriAv/",
                data: dados,
                success: function (data) {
                    alert("Avaliação Atualizada");
                    $('#myModal').modal('hide');
                }
            });

            return false;
        });
    });
</script>



