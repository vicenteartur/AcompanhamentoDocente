@model AcompanhamentoDocente.Models.TbComponenteCurricular

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center"><h1>Remover Componente</h1></div>

<h3>Tem certeza que deseja apagar este Componente?</h3>
<div>
    
    <dl class="row">

        <dd class="col-sm-10">
            <label class="negrito">Componente Curricular: </label>@Html.DisplayFor(model => model.ComponenteCurricular)
        </dd>

        <dd class="col-sm-10">
            <label class="negrito">Modalidade: </label>@Html.DisplayFor(model => model.CodigoModalidadeNavigation.Modalidade)
        </dd>

        <dd class="col-sm-10">
            <label class="negrito">Sub-Área: </label> @Html.DisplayFor(model => model.SubArea)
        </dd>

        <dd class="col-sm-10">
            <label class="negrito">Ativo: </label>
            @if (Model.Ativa != 1)
                {
                    <b>Não</b>
                 }
            else
                {
                    <b>Sim</b>
                 }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Codigo" />
        <div class="center">
            <p id="l_botao">
                <button id="btsalvarpequeno" class="btn-small waves-effect waves-light" type="submit" name="action">
                    <i class="material-icons left">delete</i>
                    Remover
                </button>

                <a href='@Url.Action("Index", "CCurricular", new { id = ViewBag.admin.Codigo , criterio = Model.Codigo})' class="waves-effect waves-light btn-small" id="btlistapequeno">
                    <span class="material-icons">

                        view_list

                    </span>
                    Lista
                </a>
            </p>
        </div>
    </form>
</div>
