@model IEnumerable<AcompanhamentoDocente.Models.TbComponenteCurricular>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    @Html.ActionLink("Create", "Create", new { id = ViewBag.Admin.Codigo })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComponenteCurricular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoModalidadeNavigation.Modalidade)
            </th>
