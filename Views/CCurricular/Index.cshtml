            <th>
                @Html.DisplayNameFor(model => model.Ativa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ComponenteCurricular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoModalidadeNavigation.Modalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativa)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = ViewBag.Admin.Codigo, comp = item.Codigo }) |
                @Html.ActionLink("Details", "Details", new { id = ViewBag.Admin.Codigo, comp = item.Codigo }) |
