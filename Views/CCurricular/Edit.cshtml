@model AcompanhamentoDocente.Models.TbComponenteCurricular

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>TbComponenteCurricular</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <input type="hidden" name="id" value="@ViewBag.admin.Codigo" />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <div class="form-group">
                <label asp-for="ComponenteCurricular" class="control-label"></label>
                <input asp-for="ComponenteCurricular" class="form-control" />
                <span asp-validation-for="ComponenteCurricular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoModalidade" class="control-label"></label>
                @Html.DropDownListFor(model => model.CodigoModalidade, (IEnumerable<SelectListItem>)ViewBag.CodigoModalidade, new { @id = "CodigoModalidade", @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="SubArea" class="control-label"></label>
                <input asp-for="SubArea" class="form-control" />
                <span asp-validation-for="SubArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ativa" class="control-label"></label>
                <input asp-for="Ativa" class="form-control" />
                <span asp-validation-for="Ativa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.admin.Codigo">Lista de Componentes Curriculares</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
