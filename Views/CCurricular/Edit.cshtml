@model AcompanhamentoDocente.Models.TbComponenteCurricular

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center"><h1>Editar Componente Curricular</h1></div>



<div class="row">
    <div class="col-md-4">
        <input type="hidden" name="id" value="@ViewBag.admin.Codigo" />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <div class="form-group">
                <label asp-for="ComponenteCurricular" class="control-label">Componente Curricular</label>
                <input asp-for="ComponenteCurricular" class="form-control" />
                <span asp-validation-for="ComponenteCurricular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoModalidade" class="control-label">Modalidade</label>
                @Html.DropDownListFor(model => model.CodigoModalidade, (IEnumerable<SelectListItem>)ViewBag.CodigoModalidade, new { @id = "CodigoModalidade", @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="SubArea" class="control-label">Sub-Área</label>
                <input asp-for="SubArea" class="form-control" />
                <span asp-validation-for="SubArea" class="text-danger"></span>
            </div>
            <div class="center">
                <h>
                    Inativo
                    <input asp-for="Ativa" type="range" min="0" max="1" class="range-field" />
                    Ativo
                </h>
                <span asp-validation-for="Ativa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="center">
                    <p id="l_botao">
                        <button id="btsalvarpequeno" class="btn-small waves-effect waves-light" type="submit" name="action">
                            Salvar
                            <i class="material-icons left">save</i>
                        </button>
                        <a href='@Url.Action("Index", "CCurricular", new { id = ViewBag.admin.Codigo})' class="waves-effect waves-light btn-small" id="btlistapequeno">
                            <span class="material-icons">

                                view_list

                            </span>
                            Lista
                        </a>
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
