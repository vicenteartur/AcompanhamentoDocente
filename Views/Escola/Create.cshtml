@model AcompanhamentoDocente.Models.TbEscola

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>TbEscola</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Escola" class="control-label"></label>
                <input asp-for="Escola" class="form-control" />
                <span asp-validation-for="Escola" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rua" class="control-label"></label>
                <input asp-for="Rua" class="form-control" />
                <span asp-validation-for="Rua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label value="CodigoEstado" class="control-label"></label>
                @Html.DropDownList("CodigoEstado", ViewBag.id_sistama as SelectList, "", htmlAttributes: new { @class = "form-control", onchange = "PegaCategoria(this.value)" })
            </div>

            <div class="form-group">
                <label asp-for="CodigoCidade" class="control-label"></label>
                @Html.DropDownList("CodigoCidade", ViewBag.CodigoCidade as SelectList, "", htmlAttributes: new { @class = "form-control", onChange = "ListaCidade(this.value)" })
            </div>
            <div class="form-group">
                <label asp-for="Inep" class="control-label"></label>
                <input asp-for="Inep" class="form-control" />
                <span asp-validation-for="Inep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ativa" class="control-label"></label>
                <input asp-for="Ativa" class="form-control" />
                <span asp-validation-for="Ativa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script type="text/javascript">
function PegaCategoria(CodigoEstado) {
        $("#CodigoEstado").empty();
        $("#CodigoEstado").append('<option value=""></option>');
        $.ajax({
            type: "POST",
            url: '@Url.Action("ListaCidade")',
            dataType: "json",
            data: "{idSistema: '" + idSistema + "'}",
            contentType: "application/json; charset=utf-8",
            success: function (sist) {
            $.each(sist, function (i, state) {
            $("#CodigoEstado").append('<option value="' + state.Value + '">' + state.Text + '</option>');
            });
            ListaCidades($("#CodigoEstado").val());

            },
            error: function (ex) {
            //alert('Failed to retrieve states.' + ex);
            }
            });
            }
</script>
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
